extends account-base.pug

block title
    title Leaderboard

block scripts
    script(src="https://kit.fontawesome.com/cb9560845e.js" crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    script(src="../static/account-base.js" defer)
    script(src="../static/leaderboard.js" defer)

block link
    link(rel="stylesheet", href="../static/base.css")
    link(rel="stylesheet", href="../static/account-base.css")
    link(rel="stylesheet", href="../static/leaderboard.css")



block content
    div#container
        #userrank 
            #rankbox.box
                h3 Rank 
                h1 #{userrank.rank} 
            #balancebox.box 
                h3 Balance 
                h1 #{userrank.balance}
            #inviteduserbox.box
                h3 Invited Users 
                h1 #{userrank.invitedUsers}
        #leaderboard 
            table#table
                thead
                    th Rank
                    th Username
                    th Invited Users
                    th Balance
                tbody
                    - for(let i=0; i<boardarr.length; i++)
                        tr
                            td=i+1
                            td=boardarr[i].username
                            td=boardarr[i].invitedUsers
                            td=boardarr[i].balance

