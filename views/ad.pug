doctype html
html
    head 
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{ad.Name}
        scripts
            script(src="https://kit.fontawesome.com/cb9560845e.js" crossorigin="anonymous")
            //- script(src="../static/dashboard.js")
            script(src="http://localhost:3000/socket.io/socket.io.js" defer)
            script(src="../static/ad.js" defer)
        styles 
            link(rel="stylesheet", href="../static/ad.css")
    body
        #timer 
            p#duration(ad_id=ad.ad_id url=ad.url username=currentUser.username) #{ad.duration}
        #container(style="height: 100vh")
            iframe(width="100%" height="100%" src=ad.url frameborder="0")