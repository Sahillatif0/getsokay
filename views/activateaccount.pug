extends account-base.pug

block title
    title Activate Account

block scripts
    script(src="https://kit.fontawesome.com/cb9560845e.js" crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    script(src="../static/account-base.js" defer)
    script(src="../static/activateaccount.js" defer)

block link
    //- link(rel="stylesheet", href="../static/base.css")
    link(rel="stylesheet", href="../static/account-base.css")
    link(rel="stylesheet", href="../static/easypaisa-dep.css")
    link(rel="stylesheet", href="../static/activateaccount.css")


block content
    div#container
        #form
            #method-logo
                img(src="../static/images/jazzcash.png", alt="easypaisa")
            #method-name(style="color: #6ad173") Activate Account
            form(action="/easypaisa-dep", method="post", id="easypaisa-dep-form", deposit_method="jazzcash")
                #emailbox.boxee
                    i(class="fa-regular fa-id-badge") 
                    input(name="email" type="email" id="email" value=currentUser.email readonly)
                #codebox.boxee
                    i(class="fa fa-coins")
                    input(name="otp" type="Number" id="otp" placeholder="Enter the code" style="width: 50%;") 
                    button#resend.actionupbtn(type="button" onclick="onsendOTP()") Send Code
                button(class="btn" type="button" onclick="onactivateAccount()") Activate Account
        #errorbox
            p#error
        #FREEBOX