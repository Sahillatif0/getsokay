extends account-base.pug

block title
    title Setting

block scripts
    script(src="https://kit.fontawesome.com/cb9560845e.js" crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    //- script(src="../static/dashboard.js")
    script(src="../static/createads.js" defer)

block link
    link(rel="stylesheet", href="../static/base.css")
    link(rel="stylesheet", href="../static/account-base.css")
    link(rel="stylesheet", href="../static/createads.css")



block content
    div#container
        #createadform
            h1 Create Your Ad 
            form(action="/createad", method="post", id="createad-form") 
                label(for="adname") Ad Name:
                input(name = "adname" id = "adname" type="text" placeholder="Enter name for your ad")
                label(for="description") Description:
                input(name = "description" id = "description" type="text" placeholder="Write description of your ad")
                label(for="url") URL:
                input(name = "url" id = "url" type="url" placeholder="Enter URL")
                label(for="clicks") Clicks:
                input(name = "clicks" id = "clicks" type="number" placeholder="Enter Clicks you want")
                label(for="duration") Duration:
                select.boxee(name="duration" id="duration")
                        option(value="10") 10 Seconds - Base CPC 0.05 GOT
                        option(value="15") 15 Seconds - Base CPC 0.07 GOT
                        option(value="20") 20 Seconds - Base CPC 0.09 GOT
                        option(value="30") 30 Seconds - Base CPC 0.12 GOT
                        option(value="45") 45 Seconds - Base CPC 0.16 GOT
                        option(value="60") 60 Seconds - Base CPC 0.21 GOT
                #preview 
                    p your website description 
                    p 2 GOT 
                    p 10s
                    p 0
                #prices 
                    #CPC.box 
                        p#cpcp CPC: 0.05 GOT
                    #Totalprice.box 
                        p#totalp Total Price: 0.05 GOT
                    #Available.box 
                        p#availp Available Balance #{currentUser.availableBalance} GOT
                
                button#createadbtn(class="btn" type="button" onclick="onCreateAd()") Confirm
    #errorbox 
        p#error
        #FREEBOX